{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <div class="container">
        <h1 class="mt-3 mb-4">Products</h1>
        <div class="row">
            {{ form_start(form) }}
            {% for product in products %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="https://via.placeholder.com/200x150" alt="{{ product.name }}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <div class="d-flex justify-content-between align-item-center">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label for="product.id">Quantity</label>
                                            <input type="number" class="form-control" name="product.id[]" value="0">
                                        </div>
                                    </div>
                                <span class="h5 mt-auto"><input type="text" class="form-control" name="product.price[]" value="{{ product.price }}" size="1" readonly>EUR</span>
                            </div>
                        </div>
                    </div>
                </div><br><br>
            {% endfor %}
                <div class="form-group">
                    <label for="clientEmail">Client Email</label>
                    <input type="email" class="form-control" id="clientEmail" name="clientEmail">
                </div>
            <button class="btn btn-warning" for="submit" class="form-control" name="submit">Order</button>
                {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
